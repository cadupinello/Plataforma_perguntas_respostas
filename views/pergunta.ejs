<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <div class="card mt-5">
      <div class="card-body">
        <h5 class="card-title"><%= pergunta.titulo %></h5>
        <p><%= pergunta.descricao %></p>
      </div>
    </div>
    <form method="POST" action="/responder" class="form-control mt-3">
      <label class="mb-2">Resposta:</label>
      <textarea name="corpo" placeholder="Digite sua resposta" class="form-control" ></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button class="btn btn-outline-primary mt-3">Responder</button>
    </form>
    <br>
    <hr>
    <ul class="list-group mt-5">
      <h6 class="text-primary">Respostas Recentes</h6>
      <% respostas.forEach(resposta => { %>
        <li class="list-group-item"><%= resposta.corpo %></li>
     <% }) %>
    </ul>
  </div>
</body>
<%- include('partials/footer.ejs') %>